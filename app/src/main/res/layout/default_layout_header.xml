<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y120">

    <RelativeLayout
        android:id="@+id/default_headerLayout_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/default_headerLayout_backLayout"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_back_green" />
        </RelativeLayout>

        <TextView
            android:id="@+id/default_headerLayout_titleLayout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c333333"
            android:textSize="@dimen/font_size_15"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/default_headerLayout_rightLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/press_effect">

            <TextView
                android:id="@+id/default_headerLayout_rightLayoutTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/xiaochui_green"
                android:textSize="@dimen/font_size_14" />

            <ImageView
                android:id="@+id/default_headerLayout_rightLayoutIv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>